@page
@model CinemaProject.Pages.Customer.Bookings.CreateModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Booking for @Model.Film.Title at @Model.Screening.Time</h2>
        </div>
        <div>
            <img src="@Model.Film.PosterLink" />
        </div>
        @for (int i = 0; i < Model.TicketTypeList.Count; i++)
        {
            <div class="mb-3">
                <label asp-for="@Model.ticketQuantities[i]">@Model.TicketTypeList[i].Name</label>
                <input asp-for="@Model.ticketQuantities[i]" type="number" placeholder="0" class="form-control" required />
            </div>
        }

        <div class="mb-3">
            <label asp-for="@Model.Booking.CustomerEmail" class="form-label">Email address</label>
            <input asp-for="@Model.Booking.CustomerEmail" type="email" class="form-control">
            <span asp-validation-for="@Model.Booking.CustomerEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Booking.CustomerName" class="form-label">Full Legal Name</label>
            <input asp-for="@Model.Booking.CustomerName" type="text" class="form-control">
            <span asp-validation-for="@Model.Booking.CustomerName" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}