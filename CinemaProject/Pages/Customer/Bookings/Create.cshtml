            @page
@model CinemaProject.Pages.Customer.Bookings.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            @if (Model.Film != null && Model.Screening != null)
            {
                <h2 class="text-primary pl-3">
                    Booking for @Model.Film.Title at @Model.Screening.Time
                </h2>
            }
            else
            {
                <h2 class="text-danger">Error: Film or Screening not found</h2>
            }
        </div>

        @if (Model.Film != null)
        {
            <div>
                <img src="@Model.Film.PosterLink" alt="Film Poster" />
            </div>
        }

        @if (Model.TicketTypeList != null && Model.TicketTypeList.Count > 0)
        {
            @for (int i = 0; i < Model.TicketTypeList.Count; i++)
            {
                <div class="mb-3">
                    <label asp-for="@Model.ticketQuantities[i]"></label>
                    <input asp-for="@Model.ticketQuantities[i]" type="number" placeholder="0" class="form-control" required />
                </div>
            }
        }
        else
        {
            <p class="text-danger">No ticket types available.</p>
        }

        <div class="mb-3">
            <label asp-for="@Model.Booking.CustomerEmail" class="form-label">Email address</label>
            <input asp-for="@Model.Booking.CustomerEmail" type="email" class="form-control">
            <span asp-validation-for="@Model.Booking.CustomerEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Booking.CustomerName" class="form-label">Customer Name</label>
            <input asp-for="@Model.Booking.CustomerName" type="text" class="form-control">
            <span asp-validation-for="@Model.Booking.CustomerName" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}
