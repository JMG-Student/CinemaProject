@page
@model CinemaProject.Pages.Customer.ScreeningsModel
@{
    ViewData["Title"] = "Screenings";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <a asp-page-handler="PreviousWeek" asp-route-filmId="@Model.FilmId" asp-route-currentWeekStart="@Model.WeekStart.ToString("yyyy-MM-dd")" class="btn btn-primary">Previous Week</a>
            <h3>Screenings for @Model.WeekStart.ToString("MMM dd, yyyy") - @Model.WeekEnd.ToString("MMM dd, yyyy")</h3>
            <a asp-page-handler="NextWeek" asp-route-filmId="@Model.FilmId" asp-route-currentWeekStart="@Model.WeekStart.ToString("yyyy-MM-dd")" class="btn btn-primary">Next Week</a>
        </div>
    </div>

    <h2>Screenings</h2>

    @if (Model.Screenings.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Film</th>
                    <th>Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Screen</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var screening in Model.Screenings)
                {
                    var endTime = screening.Time.AddMinutes(screening.Film.Runtime);
                    <tr>
                        <td>@screening.Film.Title</td>
                        <td>@screening.Time.ToString("D")</td>
                        <td>@screening.Time.ToString("t")</td>
                        <td>@endTime.ToString("t")</td>
                        <td>@screening.ScreenID</td>
                        <td>

                            <a asp-page="/Customer/Bookings/Create" asp-route-Id="@screening.Id" class="btn btn-primary">Book Tickets</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No screenings found for the selected period.</p>
    }
</div>